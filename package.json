{
  "name": "truyen-chibi-api",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "NODE_ENV=local nest start --watch",
    "build": "NODE_ENV=local nest build",
    "build:prod": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=local nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:debug": "NODE_ENV=local nest start --debug --watch",
    "start:prod": "yarn seed:prod && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "m:r": "yarn build && yarn run typeorm migration:run -- -d ./src/database/config/data-source.ts ",
    "m:g": "yarn build &&  yarn run typeorm -- -d ./src/database/config/typeorm.ts migration:generate ./src/database/migrations",
    "m:c": "yarn run typeorm migration:create ./src/database/migrations/aa",
    "m:revert": "yarn run typeorm -- -d ./src/config/typeorm.ts migration:revert",
    "seed": "yarn build && NODE_ENV=local node dist/database/seeds/seed.module",
    "seed:prod": "node dist/database/seeds/seed.module",
    "seed:refresh": "NODE_ENV=local node dist/database/seeds/seed.module --refresh",
    "seed:refresh:prod": "node dist/database/seeds/seed.module --refresh",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/types": "^3.598.0",
    "@faker-js/faker": "^8.4.1",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@nextnm/nestjs-ses": "^0.2.1",
    "@types/validator": "^13.11.9",
    "@vonage/server-sdk": "^3.13.1",
    "aws-sdk": "^2.1566.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "moment": "^2.30.1",
    "morgan-body": "^2.6.9",
    "mysql2": "^3.9.2",
    "nest-winston": "^1.9.4",
