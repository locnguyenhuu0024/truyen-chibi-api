    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.2",
    "madge": "^6.1.0",
    "nodemailer": "^6.9.10",
    "nodemailer-ses-transport": "^1.5.1",
    "prettier": "^3.0.0",
    "sequelize": "^6.37.1",
    "sequelize-typescript": "^2.1.6",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
